{
  "name": "intellectia",
  "version": "1.0.0",
  "description": "Empowering the world through AI",
  "scripts": {
    "app-graph": "nx graph",
    "app-test": "nx exec -- pnpm run _test ",
    "app-install": "pnpm recursive install",
    "app-migrate": "nx run prisma-migrate",
    "app-prisma-generate": "nx run prisma-generate",
    "app-prisma-seed": "nx run prisma-seed",
    "app-prisma-studio": "nx run prisma-studio",
    "app-dev": "nx run-many --target=dev --all --maxParallel=10",
    "app-build": "nx run-many --target=build --all --maxParallel=10",
    "app-setup": "pnpm run app-install && pnpm run app-prisma-generate && pnpm run app-migrate --name=dev && pnpm run app-dev"
  },
  "keywords": [],
  "author": "",
  "workspaces": {
    "packages": [
      "packages/*",
      "lib/*"
    ],
    "nohoist": []
  },
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "nx": "16.10.0",
    "nx-cloud": "latest"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
}
